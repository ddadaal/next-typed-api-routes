{
  "name": "@ddadaal/next-typed-api-routes",
  "version": "0.1.0",
  "description": "Make Next.js API Routes strongly typed with routes and clients type completion and auto-generated parameter validation",
  "source": "src/index.ts",
  "exports": "./dist/index.modern.js",
  "main": "dist/index.cjs",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ntar": "dist/cli/index.js"
  },
  "scripts": {
    "build-lib": "microbundle src/index.ts",
    "build-cli": "tsc --project tsconfig.cli.json",
    "build": "rimraf dist && npm run build-lib && npm run build-cli",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddadaal/next-typed-api-routes.git"
  },
  "keywords": [
    "next",
    "typescript"
  ],
  "author": {
    "name": "Chen Junda",
