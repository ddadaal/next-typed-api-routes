{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "outDir": "lib",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": ".",
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": false,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
